html(lang="kr")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Home
    body 
        h1  Hello What?...
        form(action=`http://${IP_ADRESS}:3500/upload` method="post" enctype="multipart/form-data") 
            input(type="file" name="user_file")
            input(type="submit" value="submit")
        h2  Welcome to Us...
        each file in file_list
            div
                a(download=`${file.originalname}` href=`http://${IP_ADRESS}:3500/download/${file.filename}`  target="_blank") 
                    span #{file.originalname}
                span size : #{file.size}
